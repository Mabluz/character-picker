# PostgreSQL connection URL
# For local Docker setup: postgresql://character_picker:character_picker_dev@localhost:5432/character_picker
# For production: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://character_picker:character_picker_dev@localhost:5432/character_picker

# Server port (optional, defaults to 1337)
PORT=1337

# Application secrets
AUTH_CODE_FOR_MAIN_PUSH=your_auth_code_here
CUSTOM_HEADER_MAIN_PUSH=your_custom_header_here
EMAIL_KEY=your_sendgrid_api_key_here
EMAIL_FROM=no-reply@yourdomain.com
ADMIN_AUTH_USER=your_admin_username
ADMIN_AUTH_PASS=your_admin_password
ADMIN_AUTH_USER2=your_second_admin_username
ADMIN_AUTH_PASS2=your_second_admin_password
EMAIL_ID=your_email_id_here

# Games directory path (for production deployment)
GAMES_DIR=./games

# Environment (development, production)
NODE_ENV=development
